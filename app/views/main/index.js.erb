$('#posts').append('<%= escape_javascript render(partial: 'post', collection: @tag_arr) %>');
$('.pagination').replaceWith('<%= escape_javascript will_paginate(@tag_arr) %>');

$(function() {
var swiper = new Swiper('.tag-slider', {
  speed: 500,
  slidesPerView: 1.3,
  loop: true,
  centeredSlides: true,
  resistance: true,
  resistanceRatio: 1,
  effect: 'coverflow',
  coverflow: {
    rotate: 40,
    stretch: 0,
    depth: 100,
    modifier: 1,
    slideShadows : true
  }
});
});
