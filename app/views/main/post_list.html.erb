<center>
  <h3 style="font-family: 'Hanna', serif;"># <%=@id%></h3>
</center>

<script>
  function matrixToArray(str) {
    return str.match(/(-?[0-9\.]+)/g);
  }
</script>

<% @list.reverse.take(10).each do |i| %>
  <div id="swiper_<%=i.id%>" class="post-slider swiper-container">
    <input id="<%=i.id%>_hidden" value="<%=i.id%>" type="hidden">
    <div id="<%=i.id%>_card" class="post_card swiper-wrapper">
      <div id="<%=i.id%>_left"class="slide-left slide-center swiper-slide"><%=i.left["content"]%></div>
      <div id="<%=i.id%>" class="slide-topic swiper-slide">
        <!--<a href="/main/post_content/<%=i.id%>">-->
          <div class="post_img picture" style="width:100%;height:100%;background-image:url('<%=i.img_url%>');background-size:cover;background-repeat:no-repeat;background-position: center center;">
            <div class="blurry-box" style="background:url('http://cfs6.blog.daum.net/image/14/blog/2008/03/11/23/23/47d695f9411f3&filename=%EB%AC%B4%EB%8A%AC%EC%97%86%EB%8A%94%EA%B2%80%EC%A0%95%EC%83%89%EB%B0%B0%EA%B2%BD.jpg')"></div>
            <div class="text" style="text-align:center;width:100%">
              <span style="font-size:15px;color:white; font-family: 'Jeju Gothic', sans-serif;"><%=i.subject%></span>
            </div>
          </div>
        <!--</a>-->
        <div class="post_title slide-center">topic</div>
        <div class="post_tag"></div>
      </div>
      <div id="<%=i.id%>_right" class="slide-right slide-center swiper-slide"><%=i.right["content"]%></div>
    </div>
    <div id="arrow_next_<%=i.id%>" class="arrow-next"></div>
    <div id="arrow_prev_<%=i.id%>" class="arrow-prev"></div>
  </div>
  
  <script>
    $(function() {
      var swiper = new Swiper('#swiper_<%=i.id%>', {
        direction: 'horizontal',
        speed: 300,
        resistance: true,
        resistanceRatio: 1,
        nextButton: '#arrow_next_<%=i.id%>',
        prevButton: '#arrow_prev_<%=i.id%>',
      });
    });
  </script>
  
  <script>
    $(function() {
      $('#<%=i.id%>').click(function() {
      <%if session[:from_mobile] == true%>
        document.location ="js:/"+$('#<%=i.id%>_hidden').val();
      <%else%>
        location.href="/main/post_content/<%=i.id%>";
      <%end%>
      });
      var width = (window.innerWidth > 0) ? window.innerWidth : screen.width;
      var width_94 = Math.ceil(width * 0.94);
      $('#<%=i.id%>_card').css("transform", "translate3d(-"+width_94+"px, 0px, 0px)");
      $('#<%=i.id%>_card').on('transitionend webkitTransitionEnd oTransitionEnd otransitionend MSTransitionEnd', 
        function() {
          var a = $('#<%=i.id%>_card').css("transform");
          var arrA = matrixToArray(a);
          var x = (arrA[4] == 0) ? Number(arrA[4]) : -arrA[4];
          var content;
          var confirm_option;
          
          if (width_94 > x) {
            confirm_option = {
              title: 'Swing Vote',
              buttons: { '확인': true, '취소': false },
              focus: 0,
              submit:function(e,v,m,f){ 
          		  if (v === true) {
          		    console.log("left - true");
          		    <%if session[:from_mobile]==true%>
          		      <% if @approach.first.posts[i.id.to_s].nil? %>
          		      document.location = "js:/"+$('#<%=i.id%>_hidden').val()+"/left";
          		      <% else %>
          		      var alert_option = {
          		        title: 'Swing Vote',
          		        buttons: {'확인': true},
          		        focus: 0,
          		        submit:function(e,v,m,f){
          		          if (v===true) {
          		            document.location = 'js:/<%=i.id%>';
          		          }
          		        }
          		      }
          		      $.prompt("이미 투표하셨습니다.", alert_option);
          		      <% end %>
          		    <%elsif current_user%>
          		      <% if @approach.first.posts[i.id.to_s].nil? %>
          		      location.href = '/main/do_vote/<%=i.id%>_0';
          		      <% else %>
          		      var alert_option = {
          		        title: 'Swing Vote',
          		        buttons: {'확인': true},
          		        focus: 0,
          		        submit:function(e,v,m,f){
          		          if (v===true) {
          		            location.href = '/main/post_content/<%=i.id%>';
          		          }
          		        }
          		      }
          		      $.prompt("이미 투표하셨습니다.", alert_option);
          		      <% end %>
          		    <%else%>
          		      var alert_option = {
          		        title: 'Swing Vote',
          		        buttons: {'Login': true},
          		        focus: 0,
          		        submit:function(e,v,m,f){
          		          if (v===true) {
          		            location.href = '/users/sign_in';
          		          }
          		        }
          		      }
          		      $.prompt("로그인 먼저 해주세요", alert_option);
          		      $('#<%=i.id%>_card').css("transform", "translate3d(-"+width_94+"px, 0px, 0px)");
          		    <%end%>
          		  } else if (v === false) {
          		    console.log("left - false");
                  $('#<%=i.id%>_card').css("transform", "translate3d(-"+width_94+"px, 0px, 0px)");
          		  }
        		  }
            };
            content = $("#<%=i.id%>_left").html();
            $.prompt(content, confirm_option);
          } else if(width_94 < x) {
            confirm_option = {
              title: 'Swing Vote',
              buttons: { '확인': true, '취소': false },
              focus: 0,
              submit:function(e,v,m,f){ 
          		  if (v === true) {
          		    console.log("right - true");
          		    <%if session[:from_mobile] == true%>
          		      <% if @approach.first.posts[i.id.to_s].nil? %>
          		      document.location = "js:/"+$('#<%=i.id%>_hidden').val()+"/right";
          		      <% else %>
          		      var alert_option = {
          		        title: 'Swing Vote',
          		        buttons: {'확인': true},
          		        focus: 0,
          		        submit:function(e,v,m,f){
          		          if (v===true) {
          		            document.location = 'js:/<%=i.id%>';
          		          }
          		        }
          		      }
          		      $.prompt("이미 투표하셨습니다.", alert_option);
          		      <% end %>
          		    <%elsif current_user%>
          		      <% if @approach.first.posts[i.id.to_s].nil? %>
          		      location.href = '/main/do_vote/<%=i.id%>_1';
          		      <% else %>
          		      var alert_option = {
          		        title: 'Swing Vote',
          		        buttons: {'확인': true},
          		        focus: 0,
          		        submit:function(e,v,m,f){
          		          if (v===true) {
          		            location.href = '/main/post_content/<%=i.id%>';
          		          }
          		        }
          		      }
          		      $.prompt("이미 투표하셨습니다.", alert_option);
          		      <% end %>
          		    <%else%>
          		      var alert_option = {
          		        title: 'Swing Vote',
          		        buttons: {'Login': true},
          		        focus: 0,
          		        submit:function(e,v,m,f){
          		          if (v===true) {
          		            location.href = '/users/sign_in';
          		          }
          		        }
          		      }
          		      $.prompt("로그인 먼저 해주세요", alert_option);
          		      $('#<%=i.id%>_card').css("transform", "translate3d(-"+width_94+"px, 0px, 0px)");
          		    <%end%>
                } else if (v === false) {
          		    console.log("right - false");
                  $('#<%=i.id%>_card').css("transform", "translate3d(-"+width_94+"px, 0px, 0px)");
          		  }
        		  }
            };
            content = $("#<%=i.id%>_right").html();
            $.prompt(content, confirm_option);
          }
      });
    });
  </script>
<% end %>
